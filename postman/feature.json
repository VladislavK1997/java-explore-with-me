{
  "openapi": "3.0.1",
  "info": {
    "title": "Comments service API",
    "version": "v0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    }
  ],
  "tags": [
    {
      "name": "CommentsController",
      "description": "API для работы с комментариями к событиям"
    }
  ],
  "paths": {
    "/users/{userId}/events/{eventId}/comments": {
      "post": {
        "tags": ["CommentsController"],
        "summary": "Создать комментарий для события",
        "description": "Добавление нового комментария к опубликованному событию от конкретного пользователя",
        "operationId": "createComment",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "ID пользователя, создающего комментарий",
            "schema": { "type": "integer", "format": "int64" }
          },
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "description": "ID события, к которому создаётся комментарий",
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "requestBody": {
          "description": "Текст комментария",
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CommentRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Комментарий успешно создан",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CommentResponse" }
              }
            }
          }
        }
      }
    },
    "/events/{eventId}/comments": {
      "get": {
        "tags": ["CommentsController"],
        "summary": "Получить комментарии события",
        "description": "Возвращает список всех комментариев для указанного события",
        "operationId": "getComments",
        "parameters": [
          {
            "name": "eventId",
            "in": "path",
            "required": true,
            "description": "ID события",
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": {
          "200": {
            "description": "Список комментариев",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/CommentResponse" }
                }
              }
            }
          }
        }
      }
    },
    "/users/{userId}/comments/{commentId}": {
      "delete": {
        "tags": ["CommentsController"],
        "summary": "Удалить комментарий",
        "description": "Удаляет комментарий пользователя по ID",
        "operationId": "deleteComment",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "ID пользователя, который удаляет комментарий",
            "schema": { "type": "integer", "format": "int64" }
          },
          {
            "name": "commentId",
            "in": "path",
            "required": true,
            "description": "ID комментария для удаления",
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": {
          "204": {
            "description": "Комментарий успешно удалён"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CommentRequest": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "description": "Текст комментария",
            "example": "Great event!"
          }
        },
        "required": ["text"]
      },
      "CommentResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64", "example": 1 },
          "userId": { "type": "integer", "format": "int64", "example": 100 },
          "eventId": { "type": "integer", "format": "int64", "example": 200 },
          "text": { "type": "string", "example": "Great event!" },
          "createdAt": { "type": "string", "format": "date-time", "example": "2025-12-15T13:00:00" }
        }
      }
    }
  }
}