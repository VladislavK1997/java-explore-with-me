{
  "info": {
    "name": "Feature Comments",
    "_postman_id": "feature-comments-004",
    "description": "Тесты комментариев к событиям",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create comment",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type","value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\"text\":\"Great event!\"}",
          "options":{"raw":{"language":"json"}}
        },
        "url": "http://localhost:8080/users/{{userId}}/events/{{eventId}}/comments"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.response.to.have.status(201);",
              "let jsonData = pm.response.json();",
              "pm.environment.set('commentId', jsonData.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Get comments",
      "request": {
        "method": "GET",
        "url": "http://localhost:8080/events/{{eventId}}/comments"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.response.to.have.status(200);",
              "let jsonData = pm.response.json();",
              "pm.expect(jsonData.length).to.be.above(0);"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete comment",
      "request": {
        "method": "DELETE",
        "url": "http://localhost:8080/users/{{userId}}/comments/{{commentId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.response.to.have.status(204);",
              "pm.environment.unset('commentId');"
            ]
          }
        }
      ]
    }
  ]
}